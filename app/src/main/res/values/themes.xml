<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de botones -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="ButtonStyle.Dark" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColorDark</item>
        <item name="android:textColor">@color/buttonTextColorDark</item>
    </style>

    <!-- Tema claro (por defecto) -->
    <style name="Theme.TaskCollect" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Tema oscuro -->
    <style name="Theme.TaskCollect.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkMode</item>
        <item name="colorAccent">@color/colorAccentDarkMode</item>
        <item name="buttonStyle">@style/ButtonStyle.Dark</item>
        <item name="android:windowBackground">@color/backgroundColorDark</item>
    </style>
</resources>
