<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de botones -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/iconoClaro</item>
        <item name="android:textColor">@color/iconoClaro</item>
    </style>

    <style name="ButtonStyle.Dark" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/iconoOscuro</item>
        <item name="android:textColor">@color/iconoOscuro</item>
    </style>

    <!-- Tema claro (por defecto) -->
    <style name="Theme.TaskCollect" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/fondoClaro</item>
        <item name="colorPrimaryDark">@color/fondoClaro</item>
        <item name="colorAccent">@color/sss</item>
        <item name="android:windowBackground">@color/sss</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Tema oscuro -->
    <style name="Theme.TaskCollect.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fondoOscuro</item>
        <item name="colorPrimaryDark">@color/fondoOscuro</item>
        <item name="colorAccent">@color/iconoOscuro</item>
        <item name="buttonStyle">@style/ButtonStyle.Dark</item>
        <item name="android:windowBackground">@color/ss</item>
    </style>
</resources>
